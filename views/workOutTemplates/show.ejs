<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= workoutGroup.name %> – My Exercises</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css"
    />
  </head>
  <body>
    <section class="section">
      <div class="container">
        <h1 class="title is-3"><%= workoutGroup.name %></h1>
        <p class="subtitle is-5">
          <a href="/schedule">← Back to calendar</a>
        </p>

        <% if (workoutGroup.exercises.length) { %>
          <div class="columns is-multiline">
            <% workoutGroup.exercises.forEach(ex => { %>
              <div class="column is-one-third">
                <div class="box">
                  <article class="media">
                    <div class="media-content">
                      <h2 class="title is-5"><%= ex.name %></h2>
                      <p><strong>Body Part:</strong> <%= ex.bodyPart %></p>

                    </div>
                    <% if (ex.proxyImageUrl || ex.image) { %>
                      <div class="media-right">
                        <figure class="image is-128x128">
                          <img
                            src="<%= ex.proxyImageUrl || ex.image %>"
                            alt="<%= ex.name %>"
                          >
                        </figure>
                      </div>
                    <% } %>
                  </article>
<div class="content mt-3">
  <div class="field is-grouped is-align-items-center">
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <span>3 x 8 x 50kg</span>
  </div>
  <div class="field is-grouped is-align-items-center">
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <span>3 x 9 x 50kg</span>
  </div>
  <div class="field is-grouped is-align-items-center">
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <label class="checkbox mr-2"><input type="checkbox"></label>
    <span>3 x 10 x 50kg</span>
  </div>
</div>
                 <div class="mt-3">
                  <a
                    class="button is-small is-info"
                    href="/exerciseTemplates/<%= ex._id %>"
                    >View</a>
                    <% if (user && String(ex.owner) === String(user._id)) { %>
                  <a
                    class="button is-small is-warning"
                    href="/exerciseTemplates/<%= ex._id %>/edit"
                    >Edit</a>
                  <form
                    action="/exerciseTemplates/<%= ex._id %>?_method=DELETE"
                    method="POST"
                    class="is-inline"
                    >
                  <button class="button is-small is-danger">Delete</button>
                   </form>
                    <% } %>
                    </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p>No exercises found in this group.</p>
        <% } %>
      </div>
    </section>
  </body>
</html>
