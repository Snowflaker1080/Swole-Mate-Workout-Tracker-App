<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <title>Edit <%= car.Name %></title>
  </head>

  <body>
    <div class="main-container">
      <!-- Page Header -->
      <h1>Edit <%= car.Name %></h1>

      <!-- Image Display -->
      <% if (car.imageUrl) { %>
        <img
          src="<%= car.imageUrl %>"
          alt="<%= car.Name %> image"
          class="vehicle-img"
          style="max-width: 300px; display: block; margin: 0 auto;"
        />
      <% } %>

      <!-- Edit Car Form -->
      <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
        <!-- Car Name -->
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="<%= car.Name %>" required />

        <!-- Display Name -->
        <label for="DisplayName">Display Name:</label>
        <input type="text" id="DisplayName" name="DisplayName" value="<%= car.DisplayName || '' %>" />

        <!-- Manufacturer -->
        <label for="Manufacturer">Manufacturer:</label>
        <input type="text" id="Manufacturer" name="Manufacturer" value="<%= car.Manufacturer || '' %>" />

        <!-- Class -->
        <label for="Class">Class:</label>
        <input type="text" id="Class" name="Class" value="<%= car.Class || '' %>" />

        <!-- Image URL -->
        <label for="imageUrl">Image URL:</label>
        <input type="text" id="imageUrl" name="imageUrl" value="<%= car.imageUrl || '' %>" />

        <!-- Submit Button -->
        <button type="submit" class="shared-btn">Update Car</button>
      </form>

<form action="/cars/<%= car._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
  <button type="submit" class="shared-btn delete-button">Delete Vehicle</button>
</form>


      <!-- Navigation Links -->
      <div class="nav-links">
        <a class="cars-index-link" href="/cars">
          <div class="index-link-text">My Garage</div>
        </a>

        <a class="home-link" href="/">
          <div class="home-link-text">Home</div>
        </a>
      </div>
    </div>
  </body>
</html>
