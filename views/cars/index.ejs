<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My GTA Vehicle Garage</title>
  </head>

  <body>
    <div class="main-container">
      <h1>My Garage</h1>

      <!-- Saved GTA Vehicle Cards -->
      <ul class="vehicle-list">
        <% cars.forEach(car => { %>
          <% if (car.DisplayName && car.Name) { %>
            <li class="vehicle-card">
              <a href="/cars/<%= car._id %>/edit">
                <div class="vehicle-img-wrapper">
                  <img
                    class="vehicle-img"
                    src="<%= car.imageUrl || '/stylesheets/images/placeholder.jpg' %>"
                    alt="<%= car.DisplayName %> image"
                    onerror="this.src='/stylesheets/images/placeholder.jpg';"
                  />
                </div>
                <div class="vehicle-info">
                  <h3 class="vehicle-name"><%= car.DisplayName %></h3>
                  <p class="vehicle-details">
                    <%= car.Manufacturer || 'Unknown' %> â€” <%= car.Class || 'N/A' %>
                  </p>
                </div>
              </a>
            </li>
          <% } %>
        <% }) %>
      </ul>

      <!-- Navigation Links -->
      <div class="nav-links">
        <a class="home-link-text" href="/cars/new">Add Car</a>

        <a class="cars-index-link" href="/gtav/vehicles">
          <div class="home-link-text">Browse GTA V Vehicles</div>
        </a>

        <a class="nav-link" href="/">
          <div class="home-link-text">Home</div>
        </a>
      </div>
    </div>
  </body>
</html>